<div class="container mt-3">
  <h1>All our Flats</h1>

  <% unless @query=='' %>
    <p>You searched for <strong><%= @query %></strong>. We found <%= @flats.count %> flats out of our <%= Flat.count %> on our website.</p>
  <% else %>
    <p>All <%= Flat.count %> flats.</p>
  <% end %>

  <% @flats.each do |flat| %>
        <h4><%= flat.name %></h4>
        <p><%= flat.address %></p>
        <span><%= flat.total_guests %></span>
        <span><%= flat.price_per_night %></span>

        <%= link_to "More info", flat_path(flat) %>
        <%= link_to "Edit", edit_flat_path(flat), class: "ms-3 text-warning" %>
        <%= link_to "Remove", flat_path(flat),
            data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
            class: "ms-3 text-danger" %>
  <% end %>
</div>
